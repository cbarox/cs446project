<resources>

    <!-- Base application theme. -->
    <style name="mainTheme" parent="MaterialNavigationDrawerTheme.Light.TranslucentKitKatStatusBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>

        <!-- navigation drawer settings -->
        <item name="toolbarElevation">true</item>
        <item name="learningPattern">false</item>
        <item name="rippleBackport">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

</resources>
